{% extends 'base.html' %}
{% block content %}
{% if error %}
  <small style="color: red;">{{error}}</small>
{% else %}
{% endif %}
{% if sprite %}


  <div class="pokesprite">
    <img src="{{sprite}}">
    <h1>
      {{pokemon}} Stats
    </h1>
  </div>



</div>



{% endif %}
{% if stats %}
    <div class="container-fluid">
        <div class="d-grid ">
            <div class="p-3 mb-2 bg-white border rounded">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">Stat</th>
                    <th scope="col">Base</th>
                    <th scope="col">Effort</th>
                  </tr>
                </thead>
                <tbody>
                {% for stat in stats %}
                  <tr>
                    <th scope="row">{{stat['poke_statname']}}</th>
                    <td>{{stat['poke_statbase']}}</td>
                    <td>{{stat['poke_stateffort']}}</td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>

            <div class="container-fluid">
        <div class="d-grid ">
            <div class="p-3 mb-2 bg-white border rounded">

                <form class="d-flex" action="/pokemon" method="POST">
                <a class="navbar-brand"><img src="{{url_for('static',filename='pikayou.webp')}}" style="max-width: 75px; max-height: 75px" class="icon"></a>
                <input name="pokemon" class="form-control me-2" id="pokemon" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-warning" type="submit">Search</button>
                </form>

            </div>
        </div>
    </div>  

{% endif %}
{% endblock %}
